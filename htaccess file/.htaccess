# Disable MultiViews (important for React Router)
Options -MultiViews

<IfModule mod_rewrite.c>
    RewriteEngine On

    # IMPORTANT: Set base to your app folder
    RewriteBase /snl-hr-app/

    # If the request is for an existing file or folder, serve it
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise, send everything to React's index.html
    RewriteRule . /snl-hr-app/index.html [L]
</IfModule>

# Camera & microphone permissions
<IfModule mod_headers.c>
    Header always set Permissions-Policy "camera=(self), microphone=(self)"
</IfModule>
