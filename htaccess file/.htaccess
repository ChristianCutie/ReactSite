# Disable MultiViews
Options -MultiViews

# Enable Rewrite for React Router
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /snl-hr-app/

    # If file/folder exists, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise, redirect everything to index.html (React Router)
    RewriteRule ^ index.html [L]
</IfModule>

# Enable headers for camera & microphone access
<IfModule mod_headers.c>
    # Modern browsers
    Header always set Feature-Policy "camera 'self'; microphone 'self'"
    # Allow cross-origin requests for camera if needed
    Header always set Access-Control-Allow-Origin "*"
</IfModule>
